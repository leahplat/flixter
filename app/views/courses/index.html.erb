<br />

<div class="booyah-box col-10 offset-1 course-font">
  <h1 class="text-center">Learn Something Today</h1>
  <hr />
  <% @courses.each do |course| %>
    <div class="course-index">
      <h2 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h2>
      <div class="text-center">
        <%= image_tag course.image, class: 'img-fluid' %>
      </div>
      <br class="clr" />

      <div class="row">
        <div class="col-sm-8 col-12">
          <%= course.description %>
        </div>
        <br />
        <div class="col-sm-4 col-12 text-center">
          <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
        </div>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>
